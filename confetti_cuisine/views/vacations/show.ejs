<h1 class="center">Course Data for
  <%= vacation.title %>
</h1>
<div class="row">
  <div class="col-sm-4">
    <img src="/images/<%= vacation.heroImage %>" style="width: 20vw; min-width: 150px; margin: 10px"/>
  </div>

</div>
<table class="table">
  <tr>
    <th>Title</th>
    <td>
      <%= vacation.title %>
    </td>
  </tr>
  <tr>
    <th>Description</th>
    <td>
      <%= vacation.description%>
    </td>
  </tr>
  <tr>
    <th>Max Travellers</th>
    <td>
      <%= vacation.maxTravelers%>
    </td>
  </tr>
  <tr>
    <th>Cost</th>
    <td>$
      <%= vacation.cost%>
    </td>
  </tr>
  <tr>
    <th>Cuisine</th>
    <td>
        <%= vacation.cuisine %>
    </td>
  </tr>
  <tr>
    <th>Hero Image</th>
    <td>
        <%= vacation.heroImage %>
    </td>
  </tr>
  <tr>
    <th>Destination</th>
    <td>
        <%= vacation.destination %>
    </td>
  </tr>
  <tr>
    <th>Departure Location</th>
    <td>
        <%= vacation.departureLocation %>
    </td>
  </tr>
  <tr>
    <th>Departure Date</th>
    <td>
        <%= vacation.departureDate %>
    </td>
  </tr>
  <tr>
    <th>Return Date</th>
    <td>
        <%= vacation.returnDate %>
    </td>
  </tr>
</table>

<% if (loggedIn) { %>
  <div>
    <a class="button" href="<%=`/vacations/${vacation._id}/edit`%>">
      Edit Course Details
    </a>
  </div>

  <div>
    <a class="button" href="<%= `/vacations/${vacation._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>Delete</a>
  </div>
<%} else {%>
  <div>
    <a class="button" data-toggle="modal" data-target="#myLoginModal">
      Edit Course Details
    </a>
  </div>

  <div>
    <a class="button" data-toggle="modal" data-target="#myLoginModal">Delete</a>
  </div>

  <div id="myLoginModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-body">
        Please login to create/edit/delete Vacations.
      </div>
      <div class="modal-footer">
        <button type="button" class="button" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
<%}%>

<div>
  <a class="button" href="/vacations">View all vacations</a>
</div>